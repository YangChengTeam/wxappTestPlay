/* components/constellationdetailinfo/constellationdetailinfo.wxss */
.constellation-switch {
   display: flex;
   width: 100%;
   height: 500rpx;
   justify-content: center;
   align-items: center;
 
}

.constellation-switch-wrapper {
   display: flex;
   width: 710rpx;
   height: 100%;
   border-radius: 10rpx;
   flex-direction: column;
   background: #fff;
   box-shadow: 5rpx 10rpx 5rpx rgba(0, 0, 0, .1);
}

.constellation-switch-img {
   display: flex;
   width: 100%;
   height: 280rpx;
   align-items: center;
   justify-content: space-around;
}

.constellation-img {
   width: 255rpx;
   height: 255rpx; 
}

.constellation-switch-time {
   width: 322rpx;
   height: 202rpx;
   position: relative;
}

.constellation-switch-time-info {
   display: flex;
   position: absolute;
   left: 0;
   top: 0;
   width: 322rpx;
   height: 202rpx;
   align-items: center;
   justify-content: center;
   flex-direction: column;
   color: #fff;
   font-size: 30rpx;
}

.constellation-switch-time > image {
   width: 322rpx;
   height: 202rpx;
   position: absolute;
   left: 0;
   top: 0;
}

.constellation-switch-info {
   display: flex;
   width: 100%;
}

.constellation-switch-info-item {
   width: 25%;
   font-size: 30rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
}

.constellation-detail-btn {
   width: 100%;
   display: flex;
   justify-content: center;
   align-items: center;
   margin-top: 20rpx;
}

.constellation-switch-info-item-info-1 {
   font-size: 38rpx;
   color: #7234e1;
   font-weight: bold;
}

.constellation-switch-info-item-info-2 {
  color: #f993bc;
  font-size: 38rpx;
  font-weight: bold;
}
