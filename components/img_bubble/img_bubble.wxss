/* components/bubble /bubble.wxss */

.bubble-container {
  position: relative;
  display: flex;
  padding: 20rpx;
}

.quest-bubble-container {
  min-height: 80rpx;
  position: relative;
  display: flex;
  padding-left: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 50rpx;
}

.content {
  max-width: 100%;
  background-color: rgba(0, 0, 0, 0);
  border-radius: 4px;
  word-break: break-all;
  font-size: 14px;
}

.options-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.option-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.left-btn {
  background: #5cacee;
  width: 230rpx;
  height: 78rpx;
  line-height: 78rpx;
  color: #fff;
  border-radius: 12px;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.options-img {
  width: 350rpx;
  height: 350rpx;
}

.options-txt-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.options-txt {
  width: 66%;
  height: 70rpx;
  line-height: 70rpx;
  background: #5cacee;
  margin: 10rpx;
  border-radius: 6px;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.start-view {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.start-item {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.result-item {
  display: flex;
  flex-direction: row;
  margin-top: 12rpx;
}

.title-view {
  display: flex;
  flex-direction: row;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.img-title-bg {
  max-width: 66%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  min-height: 66rpx;
  line-height: 150%;
  background: #fff;
  border-radius: 8px;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-top: 10rpx;
}

.subject-img-view {
  background: #fff;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.subject-img {
  width: 495rpx;
  height: 198rpx;
  padding: 6rpx;
}

.title-txt {
  font-size: 28rpx;
  line-height: 120%;
  color: #333;
}

.title-bg {
  max-width: 72%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  border: 12rpx solid #fff;
  padding-bottom: 20rpx;
  border-radius: 14px;
  display: flex;
  align-items: center;
  box-shadow: 2rpx 2rpx 5px #ebcbce;
}

.icon {
  width: 36px;
  height: 36px;
  position: relative;
  margin-right: 28rpx;
}

.caret-left {
  width: 20rpx;
  height: 27rpx;
  position: absolute;
  right: -30rpx;
  top: 40%;
}

.caret-right-img {
  width: 20rpx;
  height: 27rpx;
  margin-top: 10%;
  margin-left: -2rpx;
}

.container-right {
  position: relative;
  display: flex;
  justify-content: flex-end;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  padding-right: 20rpx;
}

.content-right-wrapper {
  max-width: 55%;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.content-right {
  width: 90%;
  background-color: #fff;
  border-radius: 8px;
  padding: 6px 10px;
  word-break: break-all;
  font-size: 14px;
}

.content > text, .content-right > text {
  line-height: 24px;
}

.icon-right {
  width: 36px;
  height: 36px;
  position: relative;
  margin-left: 16rpx;
}

.head_photo {
  width: 72rpx;
  height: 72rpx;
  border-radius: 4px;
  overflow: hidden;
  margin-top: 10%;
  background: #f4f2f4;
}

.caret-right {
  width: 0;
  height: 0;
  position: absolute;
  left: -28rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
}

.start-btn {
  background: #ff9090;
  width: 300rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  border-radius: 16px;
  margin-top: 20rpx;
  font-size: 32rpx;
}

.res-img {
  max-width: 420rpx;
  height: 250rpx;
  filter: blur(3px);
}
