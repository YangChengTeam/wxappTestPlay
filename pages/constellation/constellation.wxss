/* pages/constellation.wxss */
.my-header-bg {
   position: fixed;
   left: 0;
   top: 0;
   width: 100%;
   height: 500rpx;
}


.title {
   text-align: center;
   position: relative;
   z-index: 1;
   margin-top: 40rpx;
}

.title image {
   width: 348rpx;
   height: 98rpx;
}

.user {
   position: absolute;
   left: 0;
   top: 0;
   display: flex;
   width: 100%;
   height: 100%;
   align-items: center;
}

view.avatar {
   height: 60rpx;
   width: 60rpx;
   overflow: hidden;
   border-radius: 50%;
   margin-left: 20rpx;
   position: relative;
}

view.avatar > image, view.avatar > open-data {
   height: 60rpx;
   width: 60rpx;
   left: 0;
   top: 0;
   position: absolute;
   border-radius: 50%;
}

.list {
   width: 710rpx;
   display: flex;
   flex-wrap: wrap;
   margin-left: 20rpx;
   position: relative;
   z-index: 1;
}

.item {
   width: 160rpx;
   height: 225rpx;
   background: #fff;
   border-radius: 15rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
   font-size: 26rpx;
   margin-top: 15rpx;
}

.item image {
   width: 120rpx;
   height: 120rpx;
}