/* pages/constellation_detail/constellation_detail.wxss */

.my-header-bg {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 4;
}

.main-content {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tab {
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  z-index: 1000;
}

.tab-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-left: 20rpx;
  width: 710rpx;
  height: 100rpx;
}

.tab-item {
  color: #000;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.tab-item-current {
  border-bottom: solid 6rpx #7234e1;
}

swiper {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 1;
}

.swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.scroll-view {
  width: 710rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.fortune-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.index-view {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.comp-view {
  height: 56rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.start-index-txt {
  color: #000;
  font-size: 28rpx;
}

.starts-view {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.star-current-view {
  width: 30rpx;
  height: 30rpx;
  position: relative;
}

.star-img {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.star-current-img {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.constellation-switch-wrapper {
  display: flex;
  width: 710rpx;
  height: 400rpx;
  border-radius: 10rpx;
  flex-direction: column;
  background: #fff;
  box-shadow: 5rpx 10rpx 5rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.constellation-switch-img {
  display: flex;
  width: 50%;
  height: 280rpx;
  align-items: center;
  justify-content: space-around;
  position: relative;
}

.constellation-img {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  z-index: 100;
}

.constellation-switch-time {
  width: 322rpx;
  height: 202rpx;
  position: relative;
}

.constellation-switch-time-info {
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  width: 322rpx;
  height: 202rpx;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
  font-size: 30rpx;
}

.constellation-switch-time > image {
  width: 322rpx;
  height: 202rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.constellation-switch-info {
  display: flex;
  width: 100%;
}

.constellation-switch-info-item {
  width: 25%;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.constellation-detail-btn {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.constellation-switch-info-item-info-1 {
  font-size: 38rpx;
  color: #7234e1;
  font-weight: bold;
}

.constellation-switch-info-item-info-2 {
  color: #f993bc;
  font-size: 38rpx;
  font-weight: bold;
}

.constellation-btn {
  position: relative;
  width: 402rpx;
  height: 82rpx;
}

.constellation-btn > image, .constellation-btn > view,
.constellation-btn > button {
  position: absolute;
  width: 402rpx;
  height: 82rpx;
  left: 0;
  top: 0;
}

.constellation-btn > button {
  opacity: 0;
}

.constellation-btn > view {
  text-align: center;
  line-height: 82rpx;
  color: #fff;
  font-size: 30rpx;
  box-shadow: 5rpx 10rpx 5xp rgba(0, 0, 0, 0.1);
}

.fortune-item {
  width: 710rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 5rpx 10rpx 5rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.type-item-view {
  width: 630rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 60rpx;
  margin-top: 20rpx;
}

.type-img {
  width: 41rpx;
  height: 41rpx;
}

.type-txt {
  font-size: 36rpx;
  margin-left: 16rpx;
}

.type-content-view {
  width: 630rpx;
  margin-bottom: 30rpx;
}

.type-content-txt {
  font-size: 30rpx;
}
