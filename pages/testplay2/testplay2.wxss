/**chat.wxss**/
@import "../../components/img_bubble/img_bubble.wxss";

page {
 width: 100%;
  background: #f4f2f4;
  overflow: scroll;
}

.container {
  width: 100%;
  position: relative;
}

.img-content-view {
  width: 100%;
  height: 100%;
  background: #f4f2f4;
}

.chat-content {
  width: 100%;
  flex: 1;
  overflow: scroll;
  background: #f4f2f4;
}
.chat-input {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
}
.chat-input-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  background-color: #e9e9e9;
  border-top: 1rpx solid #e1e1e1;
  border-bottom: 1rpx solid #e1e1e1;
}

.chat-input-main {
  flex: 1;
  height: 100%;
}
.chat-input-main > input {
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  font-size: 30rpx;
  border-radius: 0;
}

.input-name {
  padding-left: 20rpx;
}

.chat-input-other {
  width: 140rpx;
  height: 100rpx;
}

.send-view {
  background: #7234e1;
  height: 100%;
  line-height: 100%;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

button,button::after{
  border: 0;
}

.chat-input-other > image {
  margin-top: 14rpx;
  width: 50rpx;
  height: 50rpx;
}
.chat-input-other > image:first-child {
  margin-right: 20rpx;
}

.answers-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 50rpx;
  left: 0;
}

.right-btn {
  background: #ff9090;
  width: 40%;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  border-radius: 12px;
}

button,button::after{
  border: 0;
}

.bottom-start-view {
  width: 100%;
  height: 100rpx;
  background: #7234e1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.bottom-btn{
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 36rpx;
  background: rgba(255,255,255,0)
}

.bottom-submit-view {
  width: 100%;
  height: 100rpx;
  background: #7234e1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
}

.sex-view {
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
}

.radio-group {
  width: 70%;
  height: 100%;
  padding-left: 8%;
  padding-right: 8%;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.config-sex {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: #7234e1;
  font-size: 32rpx;
}

.checkbox {
  display: inline-block;
  padding: 10rpx;
  background: #eee;
  margin: 10rpx;
  border-radius: 50%;
}
 
.checkedActive {
  background: red;
  color: #fff;
}

.sex-item-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.sex-item-img {
  width: 32rpx;
  height: 32rpx;
}

.sex-normal-txt {
  color: #aaa;
  font-size: 38rpx;
  margin-left: 20rpx;
}

.sex-checked-txt {
  color: #7234e1;
  font-size: 38rpx;
  margin-left: 20rpx;
}