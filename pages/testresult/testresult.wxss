.result-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.result-img {
  margin-top: 20rpx;
  border-radius: 3px;
}

.btn-view {
  width: 100%;
  height: 100rpx;
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.share-view{
  width: 342rpx;
  height: 84rpx;
  position: relative;
}

.share-img {
